components:
  schemas:
    Filme:
      required:
        - titulo
        - idioma_id
        - genero_id
      type: object
      properties:
        id:
          type: integer
        titulo:
          type: string
        sinopse:
          type: string
        idioma_id:
          type: integer
        genero_id:
          type: integer

    Genero:
      required:
        - nome
      type: object
      properties:
        id:
          type: integer
        nome:
          type: string

    Idioma:
      required:
        - nome
      type: object
      properties:
        id:
          type: integer
        nome:
          type: string
        sigla:
          type: string

    Personagem:
      required:
        - nome
        - filme_id
      type: object
      properties:
        id:
          type: integer
        nome:
          type: string
        filme_id:
          type: integer
        ator_id:
          type: integer

    Ator:
      required:
        - nome
      type: object
      properties:
        id:
          type: integer
        nome:
          type: string
        data_nascimento:
          type: string